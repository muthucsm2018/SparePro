    function RoundOff(number) {
        var parts = number.split('.');
        var Dec_Amount = parseFloat(parts[0] + ".00");
        if (parseFloat(parts[1]) > 0) {
            var Dec_Point = parseFloat("0." + parts[1]);
            if (parseFloat(0.5) <= Dec_Point) {
                Dec_Amount += 1;
            }
        }
        return Dec_Amount.toFixed(2);
    }
   
